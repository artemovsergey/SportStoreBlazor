


<div class="drawer-wrapper @(_isOpen ? "slide" : "")">
    <div class="drawer-mask"></div>
    <div class="drawer">
        @if (_activeUser is not null)
        {
            <div class="drawer-content">
                <img src="" />
                <div class="User-details">
                    <h3>@_activeUser.Name</h3>
                    <h6 class="mb-3 text-muted">
                        <span class="oi oi-map-marker"></span>
                        @_activeUser.Surname
                    </h6>
                    <div class="mt-4">
                        <span class="mr-5">
                            <span class="oi oi-clock mr-2"></span>
                            @_activeUser.Patronymic
                        </span>
                        <span>
                            <span class="oi oi-infinity mr-2"></span>
                            @_activeUser.Password km
                        </span>
                    </div>
                    <p class="mt-4">@_activeUser.Id</p>
                </div>
            </div>
            <div class="drawer-controls">
                <button class="btn btn-secondary"
                        @onclick="Close">
                    Close
                </button>
            </div>
        }
    </div>
</div>

@code {
    private bool _isOpen;
    private User? _activeUser;

    [Parameter, EditorRequired]
    public User? User { get; set; }

    protected override void OnParametersSet()
    {
        if (User != null)
        {
            _activeUser = User;
            _isOpen = true;
        }
    }

    private void Close()
    {
        _activeUser = null;
        _isOpen = false;
    }

}
